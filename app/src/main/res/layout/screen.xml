<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@+id/buttonMR"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/margin_Top"
    android:padding="@dimen/padding"

    android:background="@color/textView"
    android:fontFamily="monospace">
    <TextView
        android:id="@+id/phrase"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height"
        android:layout_gravity="right"
        android:clickable="false"
        android:gravity="center_vertical|right"
        android:text="@string/Expression"
        android:textSize="@dimen/exprission_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memMark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:clickable="false"
            android:ems="2"
            android:gravity="center_vertical|left"
            android:text="@string/memMark"
            android:textSize="@dimen/main_screen_text_size" />

        <TextView
            android:id="@+id/inputStr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:clickable="false"
            android:gravity="center_vertical|right"
            android:text="@string/inputStr"
            android:textSize="@dimen/memory_mark_text_size" />

    </LinearLayout>

</LinearLayout>