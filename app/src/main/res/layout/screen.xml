<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@+id/buttonMR"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    android:background="#D3C9C9"
    android:fontFamily="monospace"
    tools:layout_editor_absoluteY="12dp">
    <TextView
        android:id="@+id/phrase"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_gravity="right"
        android:clickable="false"
        android:cursorVisible="true"
        android:gravity="center_vertical|right"
        android:padding="8sp"
        android:saveEnabled="true"
        android:text="@string/Expression"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memMark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:clickable="false"
            android:cursorVisible="false"
            android:gravity="center_vertical|left"
            android:padding="8sp"
            android:saveEnabled="true"
            android:text="@string/memMark"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/inputStr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:clickable="false"
            android:cursorVisible="true"
            android:gravity="center_vertical|right"
            android:padding="8sp"
            android:saveEnabled="true"
            android:text="@string/inputStr"
            android:textSize="36sp" />

    </LinearLayout>

</LinearLayout>